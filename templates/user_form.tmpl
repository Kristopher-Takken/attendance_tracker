<!-- templates/user_form.tmpl -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{if .user}}Edit{{else}}Add New{{end}} User</title>
    <link rel="stylesheet" href="/static/style.css">
<style>



        /* General Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            background-color: #f4f6f9;
            color: #333;
            padding: 20px;
        }

        /* Container */
        .container {
            max-width: 900px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Headings */
        h1, h2 {
            color: #0056b3;
            margin-bottom: 15px;
            text-align: center;
            font-weight: 600;
        }

        h1 {
            font-size: 2em;
        }

        h2 {
            font-size: 1.5em;
        }

        /* Links */
        a {
            color: #0056b3;
            text-decoration: none;
            transition: color 0.3s;
        }

        a:hover {
            color: #003d80;
        }

        /* Tables */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            background-color: #fafafa;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #0056b3;
            color: #fff;
            font-weight: bold;
            text-transform: uppercase;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        td {
            color: #333;
        }

        /* Buttons */
        button {
            background-color: #0056b3;
            color: #fff;
            border: none;
            padding: 10px 16px;
            border-radius: 5px;
            font-size: 1em;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #003d80;
        }

        button:disabled {
            background-color: #ccc;
            cursor: not-allowed;
        }

        /* Forms */
        form {
            display: flex;
            flex-direction: column;
            gap: 10px;
            max-width: 600px;
            margin: 0 auto;
        }

        label {
            font-weight: bold;
            color: #0056b3;
        }

        input[type="text"],
        input[type="email"],
        input[type="date"],
        input[type="datetime-local"],
        input[type="number"],
        textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 1em;
            background-color: #f4f6f9;
            transition: border-color 0.3s;
        }

        input[type="text"]:focus,
        input[type="email"]:focus,
        input[type="date"]:focus,
        input[type="datetime-local"]:focus,
        input[type="number"]:focus,
        textarea:focus {
            border-color: #0056b3;
            outline: none;
        }

        textarea {
            resize: vertical;
            min-height: 100px;
            max-height: 300px;
            font-family: Arial, sans-serif;
        }

        /* Message and Links */
        .message {
            font-size: 1.1em;
            color: #333;
            text-align: center;
            padding: 15px;
        }

        .action-links {
            display: flex;
            justify-content: space-between;
            margin: 10px 0;
        }

        .action-links a, .action-links form {
            margin-right: 10px;
            display: inline;
        }

        /* Enhanced button styles */
        button {
            padding: 10px 15px;
            font-size: 1em;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #0056b3;
        }

        /* Form field styles */
        input[type="text"],
        input[type="password"],
        select {
            width: 100%;
            padding: 8px;
            margin: 4px 0;
            box-sizing: border-box;
        }

        /* Navbar styling */
        .navbar {
            width: 100%;
            background-color: #0056b3;
            padding: 10px 0;
            text-align: center;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        /* Home button styling */
        .home-button {
            color: #fff;
            font-size: 1.2em;
            text-decoration: none;
            font-weight: bold;
            padding: 8px 16px;
            border-radius: 5px;
            background-color: #0073e6;
            transition: background-color 0.3s;
        }

        .home-button:hover {
            background-color: #0056b3;
        }

        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #333; /* Dark background for contrast */
            padding: 10px 20px;
            color: white; /* White text for visibility */
        }

        .navbar-left a,
        .navbar-right a {
            color: white;
            text-decoration: none;
            margin: 0 10px;
            font-weight: bold;
        }

        .navbar-left a:hover,
        .navbar-right a:hover {
            text-decoration: underline;
        }

        .navbar-left {
            display: flex;
            align-items: center;
        }

        .navbar-right {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .navbar-right .button {
            background-color: #555; /* Grey button background */
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            text-decoration: none;
        }

        .navbar-right .button:hover {
            background-color: #777; /* Slightly lighter on hover */
        }

        /* Welcome text styling */
        .navbar-right span {
            font-size: 1rem;
            font-weight: 500;
        }

        /* Adjust for smaller screens */
        @media (max-width: 600px) {
            nav {
                flex-direction: column;
                align-items: flex-start;
            }

            .navbar-left, .navbar-right {
                flex-direction: column;
                align-items: flex-start;
                gap: 5px;
            }
        }
    </style>
</head>
<body>
<nav>
    <div class="navbar-left">
        <a href="/">Home</a>
        <a href="/attendance">Attendance</a>
        <!-- Add other navigation links here -->
    </div>
    <div class="navbar-right">
        <span>Welcome, {{.username}}</span>
        <a href="/logout" class="button">Logout</a>
    </div>
</nav>

    <h1>{{if .user}}Edit User{{else}}Add New User{{end}}</h1>
    <form action="{{.action}}" method="POST">
        <label>Username: <input type="text" name="username" value="{{.user.Username}}" required></label><br>
        <label>Password: <input type="text" name="password" {{if not .user}}required{{end}}></label><br>
        <label>Admin: <input type="checkbox" name="admin" {{if .user.Admin}}checked{{end}}></label><br>
        <label>Super Admin: <input type="checkbox" name="super_admin" {{if .user.SuperAdmin}}checked{{end}}></label><br>
        <button type="submit">Submit</button>
    </form>
</body>
</html>
